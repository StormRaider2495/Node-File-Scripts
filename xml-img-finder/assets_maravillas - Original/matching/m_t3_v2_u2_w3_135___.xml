<matching>
  <title>&lt;p&gt;Normas del lenguaje: puntuaci&amp;#243;n de las oraciones&lt;/p&gt;</title>
  <directions>&lt;p&gt;Identifica el tipo de oraci&amp;#243;n: enunciativa, interrogativa, exclamativa o imperativa.&amp;#160;&lt;/p&gt;</directions>
  <directionsAudio />
  <sfxPool value="pool1" />
  <background value="yellow3" />
  <rounds>
    <pairs>
      <pair>
        <term>
          <text>&lt;p&gt;&amp;#161;Mi mam&amp;#225; llega de viaje ma&amp;#241;ana!&lt;/p&gt;</text>
          <image />
          <audio />
        </term>
        <definition>
          <text>&lt;p&gt;Exclamativa&lt;/p&gt;</text>
          <image />
          <audio />
        </definition>
      </pair>
      <pair>
        <term>
          <text>&lt;p&gt;&amp;#161;No vayas a comer esa planta!&lt;/p&gt;</text>
          <image />
          <audio />
        </term>
